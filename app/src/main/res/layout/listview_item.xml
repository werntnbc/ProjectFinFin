<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">


    <!--promotion name-->
    <TextView
        android:id="@+id/promo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/app_color"
        android:textStyle="bold" />

    <!--date-->
    <TextView
        android:id="@+id/datelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/promo_name"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="5dp"
        android:text="@string/promotion_date"
        android:textColor="@color/font_color" />

    <TextView
        android:id="@+id/promo_startdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/promo_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/datelabel"
        android:textColor="#db1cf6d3" />

    <TextView
        android:id="@+id/tvto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/promo_name"
        android:layout_marginTop="5dp"
        android:text=" - "
        android:layout_toRightOf="@+id/promo_startdate"
        android:textColor="@color/font_color"/>

    <TextView
        android:id="@+id/promo_enddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/promo_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/tvto"
        android:textColor="#db1cf6d3" />

    <!--location-->
    <TextView
        android:id="@+id/locationlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/promo_startdate"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="5dp"
        android:text="@string/promotion_location"
        android:textColor="@color/font_color" />

    <TextView
        android:id="@+id/promo_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/promo_startdate"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/locationlabel"
        android:textColor="#db1cf6d3" />




    <!-- pictue -->
    <ImageView
        android:id="@+id/link_img1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

</RelativeLayout>